---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const SITE_URL = 'https://brothersautomate.com';
const productUrl = 'https://daily-ads-saas-production.up.railway.app/';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": SITE_URL },
    { "@type": "ListItem", "position": 2, "name": "Projects", "item": `${SITE_URL}/projects` },
    { "@type": "ListItem", "position": 3, "name": "Daily Ads", "item": `${SITE_URL}/projects/daily-ads` }
  ]
};
---

<Layout
  title="Daily Ads | AI Ad Creative Generator | Brothers Automate"
  description="Get fresh, on-brand ad creative generated daily in 15+ formats. Stop paying designers $5K/month for static that goes stale in a week."
>
  <Header />
  <main>

    <!-- HERO (site-style from ProjectPage.astro) -->
    <section class="project-hero">
      <div class="hero-bg-grid"></div>
      <div class="container">
        <div class="project-hero-content" data-animate="fade-up">
          <span class="badge">AI-Generated Ad Creative on Autopilot</span>
          <h1>Daily Ads.<br /><span class="gradient-text">21 Formats. Fresh Daily.</span></h1>
          <p class="project-hero-sub">Get fresh, on-brand ad creative generated daily in 15+ formats. Stop paying designers $5K/month for static that goes stale in a week.</p>

          <div class="hero-stats">
            <div class="hero-stat">
              <span class="hero-stat-number">21</span>
              <span class="hero-stat-label">Ad Formats</span>
            </div>
            <div class="hero-stat-divider"></div>
            <div class="hero-stat">
              <span class="hero-stat-number">Daily</span>
              <span class="hero-stat-label">Fresh Creative</span>
            </div>
            <div class="hero-stat-divider"></div>
            <div class="hero-stat">
              <span class="hero-stat-number">80%</span>
              <span class="hero-stat-label">Cost Reduction</span>
            </div>
          </div>

          <div class="hero-buttons">
            <a href={productUrl} class="btn btn-primary btn-lg" target="_blank" rel="noopener">Try It Live</a>
            <a
              href="#"
              class="btn btn-secondary btn-lg"
              data-cal-link="james-pinder-simpleflo/free-quiz-audit-automation-brothers"
              data-cal-namespace="free-quiz-audit-automation-brothers"
              data-cal-config='{"layout":"month_view","useSlotsViewOnSmallScreen":"true"}'
            >Talk to the Brothers</a>
          </div>

          <!-- Creative Engine Terminal Box -->
          <div class="da-scan-box">
            <div class="da-scan-bar">
              <div class="da-scan-dot" style="background:#e8b4a0"></div>
              <div class="da-scan-dot" style="background:#ddd6c8"></div>
              <div class="da-scan-dot" style="background:#b8d4b0"></div>
              <span style="margin-left:6px">daily-ads / creative engine</span>
            </div>
            <div class="da-scan-input-row">
              <input class="da-scan-input" id="daInput" placeholder="brand-assets.zip &middot; Acme Plumbing" />
              <button class="da-scan-btn" onclick="daRunCreative()">&#9654; GENERATE</button>
            </div>
            <div class="da-scan-log" id="daLog"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- TICKER -->
    <div class="da-ticker">
      <div class="da-ticker-inner">
        BRAND INPUT &rarr; STATIC ADS &nbsp;&middot;&nbsp; VIDEO ADS &nbsp;&middot;&nbsp; TESTIMONIAL CARDS &nbsp;&middot;&nbsp; BEFORE/AFTER &nbsp;&middot;&nbsp; FEATURE HIGHLIGHTS &nbsp;&middot;&nbsp; STORY CARDS &nbsp;&middot;&nbsp; ANIMATED REVEALS &nbsp;&middot;&nbsp; FRESH DAILY &nbsp;&middot;&nbsp;
        BRAND INPUT &rarr; STATIC ADS &nbsp;&middot;&nbsp; VIDEO ADS &nbsp;&middot;&nbsp; TESTIMONIAL CARDS &nbsp;&middot;&nbsp; BEFORE/AFTER &nbsp;&middot;&nbsp; FEATURE HIGHLIGHTS &nbsp;&middot;&nbsp; STORY CARDS &nbsp;&middot;&nbsp; ANIMATED REVEALS &nbsp;&middot;&nbsp; FRESH DAILY &nbsp;&middot;&nbsp;
      </div>
    </div>

    <!-- 01 — FORMAT GALLERY -->
    <section class="da-section" id="da-section-1">
      <div class="da-section-label">01 — Format Gallery</div>
      <h2 class="da-section-title">21 formats.<br><span class="da-accent">Fresh daily.</span></h2>
      <p class="da-section-sub">Every format matched to your brand. Click Static or Video to see what's included.</p>

      <div class="da-tabs" style="margin-top:36px">
        <button class="da-tab active" onclick="daSwitchTab(this)" data-tab="da-panel-static">Static Formats (15)</button>
        <button class="da-tab" onclick="daSwitchTab(this)" data-tab="da-panel-video">Video Formats (6)</button>
      </div>

      <div class="da-tab-panel active" id="da-panel-static">
        <div class="da-format-grid">
          <div class="da-format-card">
            <div class="da-format-name">Testimonial Card</div>
            <div class="da-format-dims">1080 &times; 1080</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Before/After Split</div>
            <div class="da-format-dims">1200 &times; 628</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Feature Highlight</div>
            <div class="da-format-dims">1080 &times; 1350</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Social Proof Banner</div>
            <div class="da-format-dims">1200 &times; 628</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Pain Point Card</div>
            <div class="da-format-dims">1080 &times; 1080</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Offer Announcement</div>
            <div class="da-format-dims">1080 &times; 1350</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Question Hook</div>
            <div class="da-format-dims">1080 &times; 1080</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Stat Callout</div>
            <div class="da-format-dims">1200 &times; 628</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Review Screenshot</div>
            <div class="da-format-dims">1080 &times; 1350</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Comparison Grid</div>
            <div class="da-format-dims">1080 &times; 1080</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Tips Carousel</div>
            <div class="da-format-dims">1080 &times; 1350</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Quote Card</div>
            <div class="da-format-dims">1080 &times; 1080</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Case Study Mini</div>
            <div class="da-format-dims">1200 &times; 628</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Countdown Timer</div>
            <div class="da-format-dims">1080 &times; 1080</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Brand Story</div>
            <div class="da-format-dims">1080 &times; 1350</div>
            <div class="da-format-badge da-badge-static">Static</div>
          </div>
        </div>
      </div>

      <div class="da-tab-panel" id="da-panel-video">
        <div class="da-format-grid">
          <div class="da-format-card">
            <div class="da-format-name">Animated Reveal</div>
            <div class="da-format-dims">15s &middot; 1080 &times; 1920</div>
            <div class="da-format-badge da-badge-video">Video</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Text Overlay</div>
            <div class="da-format-dims">10s &middot; 1080 &times; 1080</div>
            <div class="da-format-badge da-badge-video">Video</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Product Showcase</div>
            <div class="da-format-dims">20s &middot; 1080 &times; 1920</div>
            <div class="da-format-badge da-badge-video">Video</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Testimonial Clip</div>
            <div class="da-format-dims">15s &middot; 1080 &times; 1080</div>
            <div class="da-format-badge da-badge-video">Video</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Before/After Motion</div>
            <div class="da-format-dims">12s &middot; 1080 &times; 1920</div>
            <div class="da-format-badge da-badge-video">Video</div>
          </div>
          <div class="da-format-card">
            <div class="da-format-name">Stats Animation</div>
            <div class="da-format-dims">8s &middot; 1080 &times; 1080</div>
            <div class="da-format-badge da-badge-video">Video</div>
          </div>
        </div>
      </div>
    </section>

    <!-- 02 — COST COMPARISON -->
    <section class="da-section" id="da-section-2">
      <div class="da-section-label">02 — Cost Comparison</div>
      <h2 class="da-section-title">Agency creative<br><span class="da-accent">vs. autopilot.</span></h2>
      <p class="da-section-sub">The same creative output. A fraction of the cost. Zero designer dependency.</p>

      <div class="da-compare-grid">
        <div class="da-compare-card da-compare-agency">
          <div class="da-compare-header">Agency Creative</div>
          <div class="da-compare-number" style="color:#c0392b">$5K</div>
          <div class="da-compare-label">per month</div>
          <div class="da-compare-evidence">3&ndash;5 new creatives per week &middot; 2&ndash;3 day turnaround per batch &middot; Same designer, same style fatigue &middot; $60K+ per year</div>
          <div class="da-compare-signals">
            <div class="da-sig-line">
              <span class="da-sig-icon" style="color:#c0392b">&cross;</span>
              <span class="da-sig-label">Creative volume</span>
              <div class="da-sig-bar-wrap"><div class="da-sig-fill" style="width:15%;background:#c0392b"></div></div>
            </div>
            <div class="da-sig-line">
              <span class="da-sig-icon" style="color:#c0392b">&cross;</span>
              <span class="da-sig-label">Turnaround speed</span>
              <div class="da-sig-bar-wrap"><div class="da-sig-fill" style="width:20%;background:#c0392b"></div></div>
            </div>
            <div class="da-sig-line">
              <span class="da-sig-icon" style="color:#c0392b">&cross;</span>
              <span class="da-sig-label">Format variety</span>
              <div class="da-sig-bar-wrap"><div class="da-sig-fill" style="width:10%;background:#c0392b"></div></div>
            </div>
          </div>
        </div>

        <div class="da-compare-card da-compare-daily">
          <div class="da-compare-header">Daily Ads</div>
          <div class="da-compare-number" style="color:#3a9e6e">80%</div>
          <div class="da-compare-label">cost reduction</div>
          <div class="da-compare-evidence">21 fresh creatives daily &middot; Instant generation &middot; AI never fatigues &middot; Brand-matched every time</div>
          <div class="da-compare-signals">
            <div class="da-sig-line">
              <span class="da-sig-icon" style="color:#3a9e6e">&check;</span>
              <span class="da-sig-label">Creative volume</span>
              <div class="da-sig-bar-wrap"><div class="da-sig-fill" style="width:95%;background:#3a9e6e"></div></div>
            </div>
            <div class="da-sig-line">
              <span class="da-sig-icon" style="color:#3a9e6e">&check;</span>
              <span class="da-sig-label">Turnaround speed</span>
              <div class="da-sig-bar-wrap"><div class="da-sig-fill" style="width:98%;background:#3a9e6e"></div></div>
            </div>
            <div class="da-sig-line">
              <span class="da-sig-icon" style="color:#3a9e6e">&check;</span>
              <span class="da-sig-label">Format variety</span>
              <div class="da-sig-bar-wrap"><div class="da-sig-fill" style="width:92%;background:#3a9e6e"></div></div>
            </div>
          </div>
        </div>
      </div>

      <div class="da-stat-row">
        <div class="da-stat">
          <div class="da-stat-num">21</div>
          <div class="da-stat-label">Ad Formats</div>
        </div>
        <div class="da-stat">
          <div class="da-stat-num">Daily</div>
          <div class="da-stat-label">Fresh Creative</div>
        </div>
        <div class="da-stat">
          <div class="da-stat-num">80%</div>
          <div class="da-stat-label">Cost Reduction</div>
        </div>
      </div>
    </section>

    <!-- 03 — THE PIPELINE -->
    <section class="da-section" id="da-section-3">
      <div class="da-section-label">03 — The Pipeline</div>
      <h2 class="da-section-title">Brand in.<br><span class="da-accent">Creative out. Every day.</span></h2>
      <p class="da-section-sub">Five stages from brand assets to upload-ready creative. Fully automated.</p>

      <div class="da-pipeline">
        <div class="da-pipe-stage active" onclick="daTogglePipe(this)">
          <div class="da-pipe-icon">&#127912;</div>
          <div class="da-pipe-name">Brand Assets</div>
          <div class="da-pipe-desc">Colors, fonts, voice</div>
        </div>
        <div class="da-pipe-stage" onclick="daTogglePipe(this)">
          <div class="da-pipe-icon">&#129504;</div>
          <div class="da-pipe-name">AI Analysis</div>
          <div class="da-pipe-desc">Pattern recognition</div>
        </div>
        <div class="da-pipe-stage" onclick="daTogglePipe(this)">
          <div class="da-pipe-icon">&#128444;</div>
          <div class="da-pipe-name">Generation</div>
          <div class="da-pipe-desc">21 formats rendered</div>
        </div>
        <div class="da-pipe-stage" onclick="daTogglePipe(this)">
          <div class="da-pipe-icon">&#9989;</div>
          <div class="da-pipe-name">Review</div>
          <div class="da-pipe-desc">Quality check</div>
        </div>
        <div class="da-pipe-stage" onclick="daTogglePipe(this)">
          <div class="da-pipe-icon">&#128640;</div>
          <div class="da-pipe-name">Deploy</div>
          <div class="da-pipe-desc">Upload-ready files</div>
        </div>
      </div>
    </section>

    <!-- 04 — GETS SMARTER -->
    <section class="da-section" id="da-section-4">
      <div class="da-section-label">04 — Gets Smarter</div>
      <h2 class="da-section-title">Performance<br><span class="da-accent">learning built in.</span></h2>
      <p class="da-section-sub">The system tracks which formats drive engagement. Over time, it generates more of what works and less of what doesn't.</p>

      <div class="da-signal-grid">
        <div class="da-signal-card">
          <div class="da-signal-top">
            <div class="da-signal-name">Testimonial Cards</div>
            <div class="da-signal-weight">W: 0.9</div>
          </div>
          <div class="da-signal-desc">User testimonials with branded background. Consistently highest engagement across platforms.</div>
          <div class="da-signal-bar-wrap"><div class="da-signal-bar da-bar-green" style="width:87%"></div></div>
          <div class="da-signal-meta"><span>87% engagement</span><span>82% click rate</span></div>
        </div>
        <div class="da-signal-card">
          <div class="da-signal-top">
            <div class="da-signal-name">Before/After Splits</div>
            <div class="da-signal-weight">W: 0.85</div>
          </div>
          <div class="da-signal-desc">Side-by-side transformation images. Strong performer for service businesses.</div>
          <div class="da-signal-bar-wrap"><div class="da-signal-bar da-bar-green" style="width:81%"></div></div>
          <div class="da-signal-meta"><span>81% engagement</span><span>76% click rate</span></div>
        </div>
        <div class="da-signal-card">
          <div class="da-signal-top">
            <div class="da-signal-name">Feature Highlights</div>
            <div class="da-signal-weight">W: 0.8</div>
          </div>
          <div class="da-signal-desc">Single feature callout with bold text overlay. Clean and direct.</div>
          <div class="da-signal-bar-wrap"><div class="da-signal-bar da-bar-green" style="width:74%"></div></div>
          <div class="da-signal-meta"><span>74% engagement</span><span>69% click rate</span></div>
        </div>
        <div class="da-signal-card">
          <div class="da-signal-top">
            <div class="da-signal-name">Animated Reveals</div>
            <div class="da-signal-weight">W: 0.75</div>
          </div>
          <div class="da-signal-desc">15-second reveal videos with branded transitions. High watch-through rate.</div>
          <div class="da-signal-bar-wrap"><div class="da-signal-bar" style="width:68%"></div></div>
          <div class="da-signal-meta"><span>68% engagement</span><span>63% click rate</span></div>
        </div>
        <div class="da-signal-card">
          <div class="da-signal-top">
            <div class="da-signal-name">Pain Point Cards</div>
            <div class="da-signal-weight">W: 0.7</div>
          </div>
          <div class="da-signal-desc">Problem-agitation format highlighting customer pain points.</div>
          <div class="da-signal-bar-wrap"><div class="da-signal-bar" style="width:61%"></div></div>
          <div class="da-signal-meta"><span>61% engagement</span><span>55% click rate</span></div>
        </div>
        <div class="da-signal-card da-signal-decline">
          <div class="da-signal-top">
            <div class="da-signal-name" style="color:#c0392b">Stock Photo Ads</div>
            <div class="da-signal-weight" style="background:rgba(192,57,43,0.1);color:#c0392b">Declining</div>
          </div>
          <div class="da-signal-desc">Generic stock imagery performs 45% worse than custom branded creative. The system avoids this pattern.</div>
          <div class="da-signal-bar-wrap"><div class="da-signal-bar" style="width:23%;background:#c0392b"></div></div>
          <div class="da-signal-meta"><span>23% engagement</span><span style="color:#c0392b">avoid</span></div>
        </div>
      </div>
    </section>

    <!-- 05 — CTA -->
    <section class="da-cta-section" id="da-section-5">
      <div class="da-section-label" style="justify-content:center;margin-bottom:28px">05 — Get Started</div>
      <h2 class="da-cta-title">Brand in.<br>Creative out.<br><span style="color:var(--da-accent)">Daily.</span></h2>
      <p class="da-cta-sub">Upload your brand assets. Get 21 fresh, on-brand ad creatives every day.</p>
      <div class="da-cta-btn-row">
        <a href={productUrl} class="da-btn-p" target="_blank" rel="noopener">Try It Live &rarr;</a>
        <a
          href="#"
          class="da-btn-s"
          data-cal-link="james-pinder-simpleflo/free-quiz-audit-automation-brothers"
          data-cal-namespace="free-quiz-audit-automation-brothers"
          data-cal-config='{"layout":"month_view","useSlotsViewOnSmallScreen":"true"}'
        >Talk to the Brothers</a>
      </div>
      <p style="font-size:11px;color:var(--da-muted);margin-top:28px;font-family:var(--da-mono)">Daily Ads &middot; AI creative generation &middot; built for operators</p>
    </section>

  </main>
  <Footer />

  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
</Layout>

<style>
  /* ===== HERO (from ProjectPage.astro) ===== */
  .project-hero {
    position: relative;
    padding-top: 160px;
    padding-bottom: var(--space-3xl);
    background: linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-surface-alt) 100%);
    text-align: center;
    overflow: hidden;
  }

  .hero-bg-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(26, 54, 93, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(26, 54, 93, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
  }

  .project-hero-content {
    position: relative;
    max-width: 750px;
    margin: 0 auto;
  }

  .badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: rgba(237, 137, 54, 0.1);
    border: 1px solid rgba(237, 137, 54, 0.3);
    color: var(--orange);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .project-hero h1 {
    margin-bottom: var(--space-md);
    font-size: clamp(2rem, 5vw, 3.25rem);
    line-height: 1.15;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--orange) 0%, var(--blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .project-hero-sub {
    font-size: clamp(1.0625rem, 2vw, 1.25rem);
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto var(--space-lg);
  }

  .hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    padding: var(--space-lg) var(--space-xl);
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow);
  }

  .hero-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .hero-stat-number {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--navy);
    line-height: 1;
  }

  .hero-stat-label {
    font-size: 0.8125rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  .hero-stat-divider {
    width: 1px;
    height: 40px;
    background: var(--border);
  }

  .hero-buttons {
    display: flex;
    flex-direction: column;
