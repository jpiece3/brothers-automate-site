<script>
  // Creative engine demo
  const daCreativeLines = [
    ['da-log-working', '\u27F6 Loading brand assets \u00B7 Acme Plumbing'],
    ['da-log-ok', '\u2713 Color palette extracted \u00B7 3 brand colors'],
    ['da-log-ok', '\u2713 Voice profile loaded \u00B7 casual-professional'],
    ['da-log-working', '\u27F6 Generating static formats...'],
    ['da-log-ok', '\u2713 Testimonial Card \u00B7 1080x1080 \u00B7 generated'],
    ['da-log-ok', '\u2713 Before/After Split \u00B7 1200x628 \u00B7 generated'],
    ['da-log-ok', '\u2713 Feature Highlight \u00B7 1080x1350 \u00B7 generated'],
    ['da-log-working', '\u27F6 Generating video formats...'],
    ['da-log-ok', '\u2713 Animated Reveal \u00B7 15s \u00B7 1080x1920 \u00B7 rendered'],
    ['da-log-ok', '\u2713 Text Overlay \u00B7 10s \u00B7 1080x1080 \u00B7 rendered'],
    ['da-log-qual', '\u2192 15 static + 6 video = 21 creatives ready'],
    ['da-log-ok', '\u26A1 Creative batch complete \u00B7 ready for upload'],
  ];

  function daRunCreative() {
    const log = document.getElementById('daLog');
    if (!log) return;
    log.innerHTML = '';
    log.classList.add('visible');
    let i = 0;
    const iv = setInterval(() => {
      if (i >= daCreativeLines.length) { clearInterval(iv); return; }
      const [cls, msg] = daCreativeLines[i];
      const div = document.createElement('div');
      div.className = cls;
      div.textContent = msg;
      log.appendChild(div);
      log.scrollTop = log.scrollHeight;
      i++;
    }, 280);
  }

  const daInput = document.getElementById('daInput');
  if (daInput) {
    daInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') daRunCreative();
    });
  }

  // Tab switching
  function daSwitchTab(el) {
    document.querySelectorAll('.da-tab').forEach(t => t.classList.remove('active'));
    el.classList.add('active');
    const targetId = el.getAttribute('data-tab');
    document.querySelectorAll('.da-tab-panel').forEach(p => p.classList.remove('active'));
    const target = document.getElementById(targetId);
    if (target) target.classList.add('active');
  }

  // Pipeline toggle
  function daTogglePipe(el) {
    document.querySelectorAll('.da-pipe-stage').forEach(s => s.classList.remove('active'));
    el.classList.add('active');
  }

  // Section scroll animations
  const daObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('visible');
      }
    });
  }, { threshold: 0.2 });
  document.querySelectorAll('.da-section, .da-cta-section').forEach(el => daObs.observe(el));

  // Animate signal bars on scroll
  const daSignalObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.querySelectorAll('.da-signal-bar, .da-sig-fill').forEach(b => {
          const w = b.style.width;
          b.style.width = '0';
          requestAnimationFrame(() => { b.style.width = w; });
        });
      }
    });
  }, { threshold: 0.3 });
  document.querySelectorAll('.da-signal-grid, .da-compare-grid').forEach(g => daSignalObs.observe(g));

  // Make functions available globally for inline onclick handlers
  window.daRunCreative = daRunCreative;
  window.daSwitchTab = daSwitchTab;
  window.daTogglePipe = daTogglePipe;
</script>

