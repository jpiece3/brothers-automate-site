<script>
  // Screening demo
  const sfScanLines = [
    ['sf-log-working', '\u27F6 Uploading resumes \u00B7 247 PDFs \u00B7 Lifeguard Position'],
    ['sf-log-ok', '\u2713 Screening criteria loaded \u00B7 8 requirements'],
    ['sf-log-working', '\u27F6 Processing resumes...'],
    ['sf-log-ok', '\u2713 50 of 247 processed \u00B7 12 qualified so far'],
    ['sf-log-ok', '\u2713 150 of 247 processed \u00B7 28 qualified so far'],
    ['sf-log-ok', '\u2713 247 of 247 processed \u00B7 41 qualified'],
    ['sf-log-working', '\u27F6 Ranking candidates by score...'],
    ['sf-log-ok', '\u2713 Shortlist ready \u00B7 top 15 candidates'],
    ['sf-log-qual', '\u2192 41 qualified \u00B7 178 not a fit \u00B7 28 partial match'],
    ['sf-log-ok', '\u26A1 Screening complete \u00B7 247 resumes \u00B7 38 seconds'],
  ];

  function sfRunScreen() {
    const log = document.getElementById('sfScanLog');
    if (!log) return;
    log.innerHTML = '';
    log.classList.add('visible');
    let i = 0;
    const iv = setInterval(() => {
      if (i >= sfScanLines.length) { clearInterval(iv); return; }
      const [cls, msg] = sfScanLines[i];
      const div = document.createElement('div');
      div.className = cls;
      div.textContent = msg;
      log.appendChild(div);
      log.scrollTop = log.scrollHeight;
      i++;
    }, 280);
  }

  const sfScanInput = document.getElementById('sfScanInput');
  if (sfScanInput) {
    sfScanInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') sfRunScreen();
    });
  }

  // Loop card toggle
  function sfToggleLoop(el) {
    document.querySelectorAll('.sf-loop-card').forEach(c => c.classList.remove('active'));
    el.classList.add('active');
  }

  // Row highlight
  function sfHighlightRow(el) {
    document.querySelectorAll('.sf-tier-row').forEach(r => r.classList.remove('highlight'));
    el.classList.add('highlight');
  }

  // Section scroll animations
  const sfObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('visible');
      }
    });
  }, { threshold: 0.2 });
  document.querySelectorAll('.sf-section, .sf-cta-section').forEach(el => sfObs.observe(el));

  // Animate signal bars on scroll
  const sfSignalObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.querySelectorAll('.sf-signal-bar').forEach(b => {
          const w = b.style.width;
          b.style.width = '0';
          requestAnimationFrame(() => { b.style.width = w; });
        });
      }
    });
  }, { threshold: 0.3 });
  document.querySelectorAll('.sf-signal-grid').forEach(g => sfSignalObs.observe(g));

  // Make functions available globally for inline onclick handlers
  window.sfRunScreen = sfRunScreen;
  window.sfToggleLoop = sfToggleLoop;
  window.sfHighlightRow = sfHighlightRow;
</script>

