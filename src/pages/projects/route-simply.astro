<script>
  // Route optimization demo
  const rsLines = [
    ['rs-log-working', '\u27F6 Loading daily jobs \u00B7 8 stops \u00B7 Tuesday'],
    ['rs-log-ok', '\u2713 Addresses geocoded \u00B7 8 of 8'],
    ['rs-log-working', '\u27F6 Calculating optimal sequence...'],
    ['rs-log-ok', '\u2713 Original route: 87 miles \u00B7 3hr 12min drive time'],
    ['rs-log-ok', '\u2713 Optimized route: 61 miles \u00B7 2hr 15min drive time'],
    ['rs-log-working', '\u27F6 Checking real-time traffic...'],
    ['rs-log-ok', '\u2713 Route adjusted \u00B7 I-95 congestion avoided'],
    ['rs-log-qual', '\u2192 26 miles saved \u00B7 57 min saved \u00B7 2 extra job slots'],
    ['rs-log-ok', '\u26A1 Route optimized \u00B7 30% less drive time'],
  ];

  function rsRunOptimize() {
    const log = document.getElementById('rsLog');
    if (!log) return;
    log.innerHTML = '';
    log.classList.add('visible');
    let i = 0;
    const iv = setInterval(() => {
      if (i >= rsLines.length) { clearInterval(iv); return; }
      const [cls, msg] = rsLines[i];
      const div = document.createElement('div');
      div.className = cls;
      div.textContent = msg;
      log.appendChild(div);
      log.scrollTop = log.scrollHeight;
      i++;
    }, 350);
  }

  const rsInput = document.getElementById('rsInput');
  if (rsInput) {
    rsInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') rsRunOptimize();
    });
  }

  // Loop card toggle
  function rsToggleLoop(el) {
    document.querySelectorAll('.rs-loop-card').forEach(c => c.classList.remove('active'));
    el.classList.add('active');
  }

  // Schedule row highlight
  function rsHighlightRow(el) {
    document.querySelectorAll('.rs-schedule-row').forEach(r => r.classList.remove('highlight'));
    el.classList.add('highlight');
  }

  // Section scroll animations
  const rsObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('visible');
      }
    });
  }, { threshold: 0.2 });
  document.querySelectorAll('.rs-section, .rs-cta-section').forEach(el => rsObs.observe(el));

  // Animate signal bars on scroll
  const rsSigObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.querySelectorAll('.rs-sig-fill').forEach(b => {
          const w = b.style.width;
          b.style.width = '0';
          requestAnimationFrame(() => { b.style.width = w; });
        });
      }
    });
  }, { threshold: 0.3 });
  document.querySelectorAll('.rs-score-demo').forEach(g => rsSigObs.observe(g));

  // Make functions available globally for inline onclick handlers
  window.rsRunOptimize = rsRunOptimize;
  window.rsToggleLoop = rsToggleLoop;
  window.rsHighlightRow = rsHighlightRow;
</script>

