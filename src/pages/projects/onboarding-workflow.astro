<script>
  // Onboarding terminal demo
  const owLines = [
    ['ow-log-working', '\u27F6 New client added \u00B7 Johnson Paving \u00B7 123 Main St'],
    ['ow-log-ok', '\u2713 Client data pulled \u00B7 name, address, project type'],
    ['ow-log-working', '\u27F6 Running onboarding sequence...'],
    ['ow-log-ok', '\u2713 Welcome email sent \u00B7 john@example.com'],
    ['ow-log-ok', '\u2713 Walkthrough scheduled \u00B7 March 15, 10:00 AM'],
    ['ow-log-ok', '\u2713 Contract generated \u00B7 scope: driveway resurfacing'],
    ['ow-log-ok', '\u2713 Checklist created \u00B7 8 items \u00B7 crew assigned'],
    ['ow-log-ok', '\u2713 Follow-up queued \u00B7 24hr reminder'],
    ['ow-log-qual', '\u2192 6 steps completed \u00B7 0 manual work'],
    ['ow-log-ok', '\u26A1 Onboarding complete \u00B7 client ready to start'],
  ];

  function owRunOnboard() {
    const log = document.getElementById('owLog');
    if (!log) return;
    log.innerHTML = '';
    log.classList.add('visible');
    let i = 0;
    const iv = setInterval(() => {
      if (i >= owLines.length) { clearInterval(iv); return; }
      const [cls, msg] = owLines[i];
      const div = document.createElement('div');
      div.className = cls;
      div.textContent = msg;
      log.appendChild(div);
      log.scrollTop = log.scrollHeight;
      i++;
    }, 320);
  }

  const owInput = document.getElementById('owInput');
  if (owInput) {
    owInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') owRunOnboard();
    });
  }

  // Loop card toggle
  function owToggleLoop(el) {
    document.querySelectorAll('.ow-loop-card').forEach(c => c.classList.remove('active'));
    el.classList.add('active');
  }

  // Integration pipeline toggle
  function owToggleIntegration(el) {
    document.querySelectorAll('.ow-pipe-stage').forEach(s => s.classList.remove('active'));
    el.classList.add('active');
  }

  // Section scroll animations
  const owObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('visible');
      }
    });
  }, { threshold: 0.2 });
  document.querySelectorAll('.ow-section, .ow-cta-section').forEach(el => owObs.observe(el));

  // Make functions available globally for inline onclick handlers
  window.owRunOnboard = owRunOnboard;
  window.owToggleLoop = owToggleLoop;
  window.owToggleIntegration = owToggleIntegration;
</script>

