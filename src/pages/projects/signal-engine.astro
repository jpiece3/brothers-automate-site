  // Section scroll animations
  const seObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('visible');
      }
    });
  }, { threshold: 0.2 });
  document.querySelectorAll('.se-section, .se-cta-section').forEach(el => seObs.observe(el));

  // Animate signal bars on scroll
  const signalObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.querySelectorAll('.se-signal-bar').forEach(b => {
          const w = b.style.width;
          b.style.width = '0';
          requestAnimationFrame(() => { b.style.width = w; });
        });
      }
    });
  }, { threshold: 0.3 });
  document.querySelectorAll('.se-signal-grid').forEach(g => signalObs.observe(g));

