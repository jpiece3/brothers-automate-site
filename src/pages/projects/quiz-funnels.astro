    ['qf-log-qual', '\u2192 8 questions \u00B7 26 emails \u00B7 5-factor scoring \u00B7 ready'],
    ['qf-log-ok', '\u26A1 Quiz funnel deployed \u00B7 7 days \u00B7 live on your domain'],
  ];

  function qfRunBuild() {
    const log = document.getElementById('qfScanLog');
    if (!log) return;
    log.innerHTML = '';
    log.classList.add('visible');
    let i = 0;
    const iv = setInterval(() => {
      if (i >= qfScanLines.length) { clearInterval(iv); return; }
      const [cls, msg] = qfScanLines[i];
      const div = document.createElement('div');
      div.className = cls;
      div.textContent = msg;
      log.appendChild(div);
      log.scrollTop = log.scrollHeight;
      i++;
    }, 300);
  }

  const qfScanInput = document.getElementById('qfScanInput');
  if (qfScanInput) {
    qfScanInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') qfRunBuild();
    });
  }

  // Tab switching
  function qfSwitchTab(el) {
    const tabIndex = el.getAttribute('data-tab');
    document.querySelectorAll('.qf-tab-btn').forEach(btn => btn.classList.remove('active'));
    el.classList.add('active');
    document.querySelectorAll('.qf-tab-panel').forEach(panel => panel.classList.remove('active'));
    const target = document.querySelector(`.qf-tab-panel[data-panel="${tabIndex}"]`);
    if (target) target.classList.add('active');
  }

  // Loop card toggle
  function qfToggleLoop(el) {
    document.querySelectorAll('.qf-loop-card').forEach(c => c.classList.remove('active'));
    el.classList.add('active');
  }

  // Section scroll animations
  const qfObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('visible');
      }
    });
  }, { threshold: 0.2 });
  document.querySelectorAll('.qf-section, .qf-cta-section').forEach(el => qfObs.observe(el));

  // Animate signal bars on scroll
  const qfSignalObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.querySelectorAll('.qf-signal-bar').forEach(b => {
          const w = b.style.width;
          b.style.width = '0';
          requestAnimationFrame(() => { b.style.width = w; });
        });
      }
    });
  }, { threshold: 0.3 });
  document.querySelectorAll('.qf-signal-grid').forEach(g => qfSignalObs.observe(g));

  // Expose functions globally for inline onclick handlers
  window.qfRunBuild = qfRunBuild;
  window.qfSwitchTab = qfSwitchTab;
  window.qfToggleLoop = qfToggleLoop;
</script>

