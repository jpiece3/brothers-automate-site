    ['qf-log-ok', '\u2713 Scoring engine configured \u00B7 5 factors'],
    ['qf-log-working', '\u27F6 Generating email sequences...'],
    ['qf-log-ok', '\u2713 Welcome sequence \u00B7 3 emails'],
