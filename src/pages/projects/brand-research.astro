<script>
  // Research terminal demo
  const brScanLines = [
    ['br-log-working', '\u27F6 Analyzing acme-roofing.com...'],
    ['br-log-working', '\u27F6 Scraping website content and messaging...'],
    ['br-log-ok', '\u2713 3 primary competitors identified'],
    ['br-log-working', '\u27F6 Running competitor positioning analysis...'],
    ['br-log-ok', '\u2713 8 messaging gaps found'],
    ['br-log-working', '\u27F6 Building audience profile...'],
    ['br-log-ok', '\u2713 3 ideal customer segments identified'],
    ['br-log-working', '\u27F6 Generating positioning strategy...'],
    ['br-log-ok', '\u2713 Complete brand intel package ready'],
    ['br-log-qual', '\u2192 10 competitors \u00B7 3 segments \u00B7 5 positioning angles'],
    ['br-log-ok', '\u26A1 Research delivered \u00B7 48 hours \u00B7 full intelligence package'],
  ];

  function brRunResearch() {
    const log = document.getElementById('brScanLog');
    if (!log) return;
    log.innerHTML = '';
    log.classList.add('visible');
    let i = 0;
    const iv = setInterval(() => {
      if (i >= brScanLines.length) { clearInterval(iv); return; }
      const [cls, msg] = brScanLines[i];
      const div = document.createElement('div');
      div.className = cls;
      div.textContent = msg;
      log.appendChild(div);
      log.scrollTop = log.scrollHeight;
      i++;
    }, 320);
  }

  const brScanInput = document.getElementById('brScanInput');
  if (brScanInput) {
    brScanInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') brRunResearch();
    });
  }

  // Tab switching
  function brSwitchTab(el) {
    const tabIndex = el.getAttribute('data-tab');
    // Update buttons
    document.querySelectorAll('.br-tab-btn').forEach(btn => btn.classList.remove('active'));
    el.classList.add('active');
    // Update panels
    document.querySelectorAll('.br-tab-panel').forEach(panel => panel.classList.remove('active'));
    const target = document.querySelector(`.br-tab-panel[data-panel="${tabIndex}"]`);
    if (target) target.classList.add('active');
  }

  // Loop card toggle
  function brToggleLoop(el) {
    document.querySelectorAll('.br-loop-card').forEach(c => c.classList.remove('active'));
    el.classList.add('active');
  }

  // Table row highlight
  function brHighlightRow(el) {
    document.querySelectorAll('.br-comp-row').forEach(r => r.classList.remove('highlight'));
    el.classList.add('highlight');
  }

  // Section scroll animations
  const brObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('visible');
      }
    });
  }, { threshold: 0.2 });
  document.querySelectorAll('.br-section, .br-cta-section').forEach(el => brObs.observe(el));

  // Animate signal bars on scroll
  const brSignalObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.querySelectorAll('.br-signal-bar').forEach(b => {
          const w = b.style.width;
          b.style.width = '0';
          requestAnimationFrame(() => { b.style.width = w; });
        });
      }
    });
  }, { threshold: 0.3 });
  document.querySelectorAll('.br-signal-grid').forEach(g => brSignalObs.observe(g));

  // Make functions available globally for inline onclick handlers
  window.brRunResearch = brRunResearch;
  window.brSwitchTab = brSwitchTab;
  window.brToggleLoop = brToggleLoop;
  window.brHighlightRow = brHighlightRow;
</script>

