---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { getAllProjects, type Project } from '../../data/projects';
import CTA from '../../components/CTA.astro';
import Footer from '../../components/Footer.astro';

const SITE_URL = 'https://brothersautomate.com';
const allProjects = getAllProjects();

function getProjectsBySlug(slugs: string[]): Project[] {
  return slugs
    .map(slug => allProjects.find(p => p.slug === slug))
    .filter((p): p is Project => p !== undefined);
}

const categories = [
  {
    id: 'leads',
    heading: 'Get More and Better Leads',
    description: 'Systems that capture, qualify, and follow up with leads — automatically, around the clock.',
    projects: getProjectsBySlug(['quiz-funnels', 'after-hours-agent', 'signal-engine', 'daily-ads']),
  },
  {
    id: 'admin',
    heading: 'Eliminate Repetitive Admin',
    description: 'The onboarding, tracking, and scheduling work that eats your week — handled by systems that run themselves.',
    projects: getProjectsBySlug(['onboarding-workflow', 'automated-inventory', 'route-simply']),
  },
  {
    id: 'research',
    heading: 'Speed Up Decisions and Research',
    description: 'Research and analysis that used to take weeks, done in minutes. Better data, faster decisions.',
    projects: getProjectsBySlug(['brand-research', 'screenfast', 'equipment-identifier']),
  },
];

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": SITE_URL },
    { "@type": "ListItem", "position": 2, "name": "Projects", "item": `${SITE_URL}/projects` }
  ]
};
---

<Layout
  title="AI Systems for Service Businesses | Projects | Brothers Automate"
  description="See the AI systems we build for service businesses: lead generation, admin automation, and decision tools. Custom-built, running 24/7, and saving hours every week."
>
  <Header />
  <main>
    <!-- Hero -->
    <section class="projects-hero">
      <div class="hero-bg-grid"></div>
      <div class="container">
        <div class="projects-hero-content" data-animate="fade-up">
          <span class="badge">AI Automations for Service Businesses</span>
          <h1>More Qualified Leads.<br /><span class="gradient-text">Less Manual Work.</span></h1>
          <p class="projects-hero-sub">Done-for-you AI systems for home service, professional service, and local businesses doing $1-5M. They handle lead follow-up, admin, and operations — running 24/7 while you focus on clients.</p>

          <div class="hero-ctas">
            <a
              href="#"
              class="btn btn-primary btn-lg"
              data-cal-link="james-pinder-simpleflo/free-quiz-audit-automation-brothers"
              data-cal-namespace="free-quiz-audit-automation-brothers"
              data-cal-config='{"layout":"month_view","useSlotsViewOnSmallScreen":"true"}'
            >Talk to the Brothers</a>
            <a href="#projects" class="btn btn-secondary btn-lg">See Our Systems</a>
          </div>

          <div class="hero-stats">
            <div class="hero-stat">
              <span class="hero-stat-number">10+</span>
              <span class="hero-stat-label">Systems Deployed</span>
            </div>
            <div class="hero-stat-divider"></div>
            <div class="hero-stat">
              <span class="hero-stat-number">85%</span>
              <span class="hero-stat-label">Less Busywork</span>
            </div>
            <div class="hero-stat-divider"></div>
            <div class="hero-stat">
              <span class="hero-stat-number">24/7</span>
              <span class="hero-stat-label">Working While You Sleep</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects grouped by outcome -->
    <section class="projects-section" id="projects">
      <div class="container">
        {categories.map((category) => (
          <div class="category-group" data-animate="fade-up">
            <div class="category-header">
              <h2>{category.heading}</h2>
              <p>{category.description}</p>
            </div>
            <div class="projects-grid" data-animate-stagger>
              {category.projects.map((project) => (
                <a href={`/projects/${project.slug}`} class="project-card">
                  <div class="card-top">
                    <div class="project-icon-wrap">
                      <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d={project.icon}></path>
                      </svg>
                    </div>
                  </div>
                  <h3>{project.name}</h3>
                  <p class="card-problem">{project.problem.headline}</p>
                  <div class="card-stats">
                    {project.results.stats.slice(0, 2).map((stat) => (
                      <div class="card-stat">
                        <span class="card-stat-num">{stat.number}</span>
                        <span class="card-stat-label">{stat.label}</span>
                      </div>
                    ))}
                  </div>
                  <span class="card-cta">See how this works &rarr;</span>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <CTA />
  </main>
  <Footer />

  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
</Layout>

<style>
  /* Hero */
  .projects-hero {
    position: relative;
    padding-top: 160px;
    padding-bottom: var(--space-3xl);
    background: linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-surface-alt) 100%);
    text-align: center;
    overflow: hidden;
  }

  .hero-bg-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(26, 54, 93, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(26, 54, 93, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
  }

  .projects-hero-content {
    position: relative;
    max-width: 750px;
    margin: 0 auto;
  }

  .badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: rgba(237, 137, 54, 0.1);
    border: 1px solid rgba(237, 137, 54, 0.3);
    color: var(--orange);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .projects-hero h1 {
    margin-bottom: var(--space-md);
    font-size: clamp(2rem, 5vw, 3.25rem);
    line-height: 1.15;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--orange) 0%, var(--blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .projects-hero-sub {
    font-size: clamp(1.0625rem, 2vw, 1.25rem);
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-ctas {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    align-items: center;
    margin-top: var(--space-lg);
    margin-bottom: var(--space-lg);
  }

  @media (min-width: 480px) {
    .hero-ctas {
      flex-direction: row;
      justify-content: center;
    }
  }

  .hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-lg);
    margin-top: var(--space-xl);
    padding: var(--space-lg) var(--space-xl);
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow);
  }

  .hero-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .hero-stat-number {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--navy);
    line-height: 1;
  }

  .hero-stat-label {
    font-size: 0.8125rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  .hero-stat-divider {
    width: 1px;
    height: 40px;
    background: var(--border);
  }

  /* Projects grid */
  .projects-section {
    padding: var(--space-xl) 0 var(--space-3xl);
  }

  .category-group {
    margin-bottom: var(--space-3xl);
  }

  .category-group:last-child {
    margin-bottom: 0;
  }

  .category-header {
    margin-bottom: var(--space-xl);
  }

  .category-header h2 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    margin-bottom: var(--space-xs);
  }

  .category-header p {
    font-size: 1.0625rem;
    color: var(--text-secondary);
    max-width: 600px;
    line-height: 1.6;
  }

  .projects-grid {
    display: grid;
    gap: var(--space-lg);
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  }

  .project-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-xl);
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition);
    position: relative;
    overflow: hidden;
  }

  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--orange) 0%, var(--blue) 100%);
    opacity: 0;
    transition: opacity var(--transition);
  }

  .project-card:hover {
    color: inherit;
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: transparent;
  }

  .project-card:hover::before {
    opacity: 1;
  }

  .card-top {
    display: flex;
    align-items: center;
    margin-bottom: var(--space-md);
  }

  .project-icon-wrap {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-md);
    background: linear-gradient(135deg, var(--navy) 0%, var(--blue) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .project-card h3 {
    font-size: 1.25rem;
    margin: 0 0 var(--space-xs);
    color: var(--navy);
  }

  .card-problem {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0 0 var(--space-lg);
    flex: 1;
  }

  .card-stats {
    display: flex;
    gap: var(--space-lg);
    padding: var(--space-md) 0;
    border-top: 1px solid var(--border-light);
    margin-bottom: var(--space-md);
  }

  .card-stat {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .card-stat-num {
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--navy);
    line-height: 1;
  }

  .card-stat-label {
    font-size: 0.75rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  .card-cta {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--blue);
    transition: color var(--transition);
  }

  .project-card:hover .card-cta {
    color: var(--orange);
  }

  /* Responsive */
  @media (max-width: 767px) {
    .projects-hero {
      padding-top: 120px;
      padding-bottom: var(--space-2xl);
    }

    .hero-stats {
      flex-direction: column;
      gap: var(--space-md);
      padding: var(--space-md);
    }

    .hero-stat-divider {
      width: 60px;
      height: 1px;
    }

    .hero-ctas .btn {
      width: 100%;
      justify-content: center;
    }

    .category-group {
      margin-bottom: var(--space-2xl);
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
