<script>
  // Sync terminal demo
  const syncLines = [
    ['ai-log-working', '\u27F6 Connecting to Square API \u00B7 Haddonfield Pet Supply'],
    ['ai-log-ok', '\u2713 Authentication successful \u00B7 OAuth token valid'],
    ['ai-log-working', '\u27F6 Pulling today\u0027s sales data...'],
    ['ai-log-ok', '\u2713 47 transactions \u00B7 83 items sold'],
    ['ai-log-working', '\u27F6 Updating inventory counts...'],
    ['ai-log-ok', '\u2713 312 SKUs updated \u00B7 8 low-stock alerts'],
    ['ai-log-working', '\u27F6 Generating daily report...'],
    ['ai-log-ok', '\u2713 Report ready \u00B7 emailing to owner'],
    ['ai-log-qual', '\u2192 83 items sold \u00B7 $2,847 revenue \u00B7 8 low-stock'],
    ['ai-log-ok', '\u26A1 Daily sync complete \u00B7 0 manual work'],
  ];

  function aiRunSync() {
    const log = document.getElementById('syncLog');
    if (!log) return;
    log.innerHTML = '';
    log.classList.add('visible');
    let i = 0;
    const iv = setInterval(() => {
      if (i >= syncLines.length) { clearInterval(iv); return; }
      const [cls, msg] = syncLines[i];
      const div = document.createElement('div');
      div.className = cls;
      div.textContent = msg;
      log.appendChild(div);
      log.scrollTop = log.scrollHeight;
      i++;
    }, 320);
  }

  const syncInput = document.getElementById('syncInput');
  if (syncInput) {
    syncInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') aiRunSync();
    });
  }

  // Report tab switching
  function aiSwitchReport(el) {
    const tabName = el.getAttribute('data-tab');
    // Update tab buttons
    document.querySelectorAll('.ai-report-tab').forEach(t => t.classList.remove('active'));
    el.classList.add('active');
    // Update panels
    document.querySelectorAll('.ai-tab-panel').forEach(p => p.classList.remove('active'));
    const targetPanel = document.querySelector(`.ai-tab-panel[data-panel="${tabName}"]`);
    if (targetPanel) targetPanel.classList.add('active');
  }

  // Pipeline stage toggle
  function aiTogglePipe(el) {
    document.querySelectorAll('.ai-pipe-stage').forEach(s => s.classList.remove('active'));
    el.classList.add('active');
  }

  // Section scroll animations
  const aiSectionObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('visible');
      }
    });
  }, { threshold: 0.15 });
  document.querySelectorAll('.ai-section, .ai-cta-section').forEach(el => aiSectionObs.observe(el));

  // Animate inventory bars on scroll
  const invBarObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.querySelectorAll('.ai-inv-bar').forEach(bar => {
          const targetWidth = bar.getAttribute('data-width');
          // Reset then animate
          bar.style.width = '0';
          requestAnimationFrame(() => {
            requestAnimationFrame(() => {
              bar.style.width = targetWidth;
            });
          });
        });
      }
    });
  }, { threshold: 0.25 });
  document.querySelectorAll('.ai-inventory-grid').forEach(g => invBarObs.observe(g));

  // Make functions available globally for inline onclick handlers
  window.aiRunSync = aiRunSync;
  window.aiSwitchReport = aiSwitchReport;
  window.aiTogglePipe = aiTogglePipe;
</script>

