---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const SITE_URL = 'https://brothersautomate.com';
const videoUrl = 'https://www.youtube.com/embed/mV9VePjnCrA';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": SITE_URL },
    { "@type": "ListItem", "position": 2, "name": "Projects", "item": `${SITE_URL}/projects` },
    { "@type": "ListItem", "position": 3, "name": "Automated Inventory", "item": `${SITE_URL}/projects/automated-inventory` }
  ]
};
---

<Layout
  title="Automated Inventory | Square POS Sync & Reporting | Brothers Automate"
  description="Stop manually tracking inventory in Square. We automate daily inventory updates and send you a clean report every morning. Built for a pet store in Haddonfield, NJ."
>
  <Header />
  <main>

    <!-- HERO (site-style from ProjectPage.astro) -->
    <section class="project-hero">
      <div class="hero-bg-grid"></div>
      <div class="container">
        <div class="project-hero-content" data-animate="fade-up">
          <span class="badge">Daily Inventory Sync and Reporting via Square</span>
          <h1>Automated Inventory.<br /><span class="gradient-text">Daily Auto Reports.</span></h1>
          <p class="project-hero-sub">Stop manually tracking inventory in Square. We automate daily inventory updates and send you a clean report every morning.</p>

          <div class="hero-stats">
            <div class="hero-stat">
              <span class="hero-stat-number">Daily</span>
              <span class="hero-stat-label">Auto Reports</span>
            </div>
            <div class="hero-stat-divider"></div>
            <div class="hero-stat">
              <span class="hero-stat-number">0</span>
              <span class="hero-stat-label">Manual Updates</span>
            </div>
            <div class="hero-stat-divider"></div>
            <div class="hero-stat">
              <span class="hero-stat-number">100%</span>
              <span class="hero-stat-label">Inventory Accuracy</span>
            </div>
          </div>

          <div class="hero-buttons">
            <a href="#ai-video" class="btn btn-primary btn-lg">Watch the Demo</a>
            <a
              href="#"
              class="btn btn-secondary btn-lg"
              data-cal-link="james-pinder-simpleflo/free-quiz-audit-automation-brothers"
              data-cal-namespace="free-quiz-audit-automation-brothers"
              data-cal-config='{"layout":"month_view","useSlotsViewOnSmallScreen":"true"}'
            >Talk to the Brothers</a>
          </div>

          <!-- Inventory Sync Terminal Box -->
          <div class="ai-scan-box">
            <div class="ai-scan-bar">
              <div class="ai-scan-dot" style="background:#e8b4a0"></div>
              <div class="ai-scan-dot" style="background:#ddd6c8"></div>
              <div class="ai-scan-dot" style="background:#b8d4b0"></div>
              <span style="margin-left:6px">auto-inventory / sync terminal</span>
            </div>
            <div class="ai-scan-input-row">
              <input class="ai-scan-input" id="syncInput" placeholder="haddonfield-pet-supply · daily sync" />
              <button class="ai-scan-btn" onclick="aiRunSync()">&#9654; RUN SYNC</button>
            </div>
            <div class="ai-scan-log" id="syncLog"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- TICKER -->
    <div class="ai-ticker">
      <div class="ai-ticker-inner">
        SQUARE API &rarr; SALES DATA &nbsp;&middot;&nbsp; INVENTORY UPDATE &nbsp;&middot;&nbsp; TREND ANALYSIS &nbsp;&middot;&nbsp; LOW-STOCK ALERT &nbsp;&middot;&nbsp; DAILY REPORT &nbsp;&middot;&nbsp; OWNER EMAIL &nbsp;&middot;&nbsp; ZERO MANUAL WORK &nbsp;&middot;&nbsp;
        SQUARE API &rarr; SALES DATA &nbsp;&middot;&nbsp; INVENTORY UPDATE &nbsp;&middot;&nbsp; TREND ANALYSIS &nbsp;&middot;&nbsp; LOW-STOCK ALERT &nbsp;&middot;&nbsp; DAILY REPORT &nbsp;&middot;&nbsp; OWNER EMAIL &nbsp;&middot;&nbsp; ZERO MANUAL WORK &nbsp;&middot;&nbsp;
      </div>
    </div>

    <!-- 01 — DAILY REPORT PREVIEW -->
    <section class="ai-section" id="ai-section-1">
      <div class="ai-section-label">01 — Daily Report Preview</div>
      <h2 class="ai-section-title">Your daily report.<br><span class="ai-accent">Open your email. Know your inventory.</span></h2>
      <p class="ai-section-sub">Every morning, the owner gets a clean report with everything they need to know. No logging into Square. No spreadsheets.</p>

      <div class="ai-report-card">
        <div class="ai-report-header">
          <div class="ai-report-header-left">
            <div class="ai-report-title">Daily Inventory Report — Feb 20, 2026</div>
            <div class="ai-report-store">Haddonfield Pet Supply</div>
          </div>
          <div class="ai-report-logo">&#128230;</div>
        </div>

        <div class="ai-report-summary">
          <div class="ai-report-stat">
            <div class="ai-report-stat-num">83</div>
            <div class="ai-report-stat-label">Items Sold</div>
          </div>
          <div class="ai-report-stat">
            <div class="ai-report-stat-num">$2,847</div>
            <div class="ai-report-stat-label">Revenue</div>
          </div>
          <div class="ai-report-stat">
            <div class="ai-report-stat-num">8</div>
            <div class="ai-report-stat-label">Low Stock</div>
          </div>
          <div class="ai-report-stat">
            <div class="ai-report-stat-num">2</div>
            <div class="ai-report-stat-label">Out of Stock</div>
          </div>
        </div>

        <div class="ai-report-tabs">
          <button class="ai-report-tab active" onclick="aiSwitchReport(this)" data-tab="top-sellers">Top Sellers</button>
          <button class="ai-report-tab" onclick="aiSwitchReport(this)" data-tab="low-stock">Low Stock</button>
          <button class="ai-report-tab" onclick="aiSwitchReport(this)" data-tab="trends">Trends</button>
        </div>

        <div class="ai-report-body">
          <!-- Top Sellers Tab -->
          <div class="ai-tab-panel active" data-panel="top-sellers">
            <table class="ai-report-table">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Qty Sold</th>
                  <th>Remaining</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Premium Dog Food 30lb</td>
                  <td>12</td>
                  <td>45</td>
                </tr>
                <tr>
                  <td>Cat Litter Multi-Cat</td>
                  <td>8</td>
                  <td>12</td>
                </tr>
                <tr>
                  <td>Dental Chews Large</td>
                  <td>7</td>
                  <td>34</td>
                </tr>
                <tr>
                  <td>Goldfish Flakes</td>
                  <td>6</td>
                  <td>67</td>
                </tr>
                <tr>
                  <td>Dog Toy Rope Tug</td>
                  <td>5</td>
                  <td>23</td>
                </tr>
              </tbody>
            </table>
          </div>

          <!-- Low Stock Tab -->
          <div class="ai-tab-panel" data-panel="low-stock">
            <table class="ai-report-table">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Remaining</th>
                  <th>Reorder Point</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Cat Litter Multi-Cat</td>
                  <td>12</td>
                  <td>20</td>
                  <td><span class="ai-badge-orange">Low</span></td>
                </tr>
                <tr>
                  <td>Fish Tank Filter</td>
                  <td>3</td>
                  <td>10</td>
                  <td><span class="ai-badge-red">Critical</span></td>
                </tr>
                <tr>
                  <td>Bird Seed Mix 5lb</td>
                  <td>8</td>
                  <td>15</td>
                  <td><span class="ai-badge-orange">Low</span></td>
                </tr>
                <tr>
                  <td>Hamster Bedding</td>
                  <td>2</td>
                  <td>8</td>
                  <td><span class="ai-badge-red">Critical</span></td>
                </tr>
              </tbody>
            </table>
          </div>

          <!-- Trends Tab -->
          <div class="ai-tab-panel" data-panel="trends">
            <div class="ai-trend-cards">
              <div class="ai-trend-card ai-trend-up">
                <div class="ai-trend-icon">&#8593;</div>
                <div class="ai-trend-text">Dog food sales up <strong>23%</strong> vs. last Tuesday — consider increasing order</div>
              </div>
              <div class="ai-trend-card ai-trend-down">
                <div class="ai-trend-icon">&#8595;</div>
                <div class="ai-trend-text">Cat litter trending down <strong>12%</strong> this month — seasonal pattern from last year</div>
              </div>
              <div class="ai-trend-card ai-trend-steady">
                <div class="ai-trend-icon">&#8594;</div>
                <div class="ai-trend-text">Fish supplies steady — no action needed</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 02 — HOW IT WORKS -->
    <section class="ai-section" id="ai-section-2">
      <div class="ai-section-label">02 — How It Works</div>
      <h2 class="ai-section-title">Square API<br><span class="ai-accent">to your inbox. Every night.</span></h2>
      <p class="ai-section-sub">Five automated steps. Zero manual work. The system runs every day whether you think about it or not.</p>

      <div class="ai-pipeline">
        <div class="ai-pipe-stage active" onclick="aiTogglePipe(this)">
          <div class="ai-pipe-icon">&#128225;</div>
          <div class="ai-pipe-name">Square API</div>
          <div class="ai-pipe-desc">End-of-day sales data pull</div>
        </div>
        <div class="ai-pipe-stage" onclick="aiTogglePipe(this)">
          <div class="ai-pipe-icon">&#9881;</div>
          <div class="ai-pipe-name">Data Processing</div>
          <div class="ai-pipe-desc">Transaction matching + inventory adjustment</div>
        </div>
        <div class="ai-pipe-stage" onclick="aiTogglePipe(this)">
          <div class="ai-pipe-icon">&#128202;</div>
          <div class="ai-pipe-name">Analysis</div>
          <div class="ai-pipe-desc">Trend detection + low-stock flagging</div>
        </div>
        <div class="ai-pipe-stage" onclick="aiTogglePipe(this)">
          <div class="ai-pipe-icon">&#128203;</div>
          <div class="ai-pipe-name">Report</div>
          <div class="ai-pipe-desc">Clean summary generated</div>
        </div>
        <div class="ai-pipe-stage" onclick="aiTogglePipe(this)">
          <div class="ai-pipe-icon">&#128231;</div>
          <div class="ai-pipe-name">Email</div>
          <div class="ai-pipe-desc">Delivered to owner's inbox</div>
        </div>
      </div>
    </section>

    <!-- 03 — ALWAYS CURRENT -->
    <section class="ai-section" id="ai-section-3">
      <div class="ai-section-label">03 — Always Current</div>
      <h2 class="ai-section-title">Stock levels<br><span class="ai-accent">you can trust.</span></h2>
      <p class="ai-section-sub">Every SKU updated nightly. Low-stock alerts before you run out. No more checking shelves to know what you have.</p>

      <div class="ai-inventory-grid">
        <div class="ai-inv-card">
          <div class="ai-inv-top">
            <div class="ai-inv-name">Dog Food</div>
            <span class="ai-inv-badge ai-inv-healthy">Healthy</span>
          </div>
          <div class="ai-inv-count">45 <span>units</span></div>
          <div class="ai-inv-bar-wrap"><div class="ai-inv-bar ai-bar-green" data-width="75%"></div></div>
          <div class="ai-inv-note">Steady demand &middot; reorder in 2 weeks</div>
        </div>
        <div class="ai-inv-card">
          <div class="ai-inv-top">
            <div class="ai-inv-name">Cat Litter</div>
            <span class="ai-inv-badge ai-inv-low">Low Stock</span>
          </div>
          <div class="ai-inv-count">12 <span>units</span></div>
          <div class="ai-inv-bar-wrap"><div class="ai-inv-bar ai-bar-orange" data-width="20%"></div></div>
          <div class="ai-inv-note">Down 12% this month &middot; reorder now</div>
        </div>
        <div class="ai-inv-card">
          <div class="ai-inv-top">
            <div class="ai-inv-name">Fish Supplies</div>
            <span class="ai-inv-badge ai-inv-critical">Critical</span>
          </div>
          <div class="ai-inv-count">8 <span>units</span></div>
          <div class="ai-inv-bar-wrap"><div class="ai-inv-bar ai-bar-red" data-width="13%"></div></div>
          <div class="ai-inv-note">Below reorder point &middot; auto-alert sent</div>
        </div>
        <div class="ai-inv-card">
          <div class="ai-inv-top">
            <div class="ai-inv-name">Dog Toys</div>
            <span class="ai-inv-badge ai-inv-healthy">Healthy</span>
          </div>
          <div class="ai-inv-count">67 <span>units</span></div>
          <div class="ai-inv-bar-wrap"><div class="ai-inv-bar ai-bar-green" data-width="85%"></div></div>
          <div class="ai-inv-note">Up 8% this week &middot; seasonal trend</div>
        </div>
        <div class="ai-inv-card">
          <div class="ai-inv-top">
            <div class="ai-inv-name">Bird Seed</div>
            <span class="ai-inv-badge ai-inv-low">Moderate</span>
          </div>
          <div class="ai-inv-count">23 <span>units</span></div>
          <div class="ai-inv-bar-wrap"><div class="ai-inv-bar ai-bar-orange" data-width="38%"></div></div>
          <div class="ai-inv-note">Approaching reorder point</div>
        </div>
        <div class="ai-inv-card">
          <div class="ai-inv-top">
            <div class="ai-inv-name">Treats & Chews</div>
            <span class="ai-inv-badge ai-inv-critical">Critical</span>
          </div>
          <div class="ai-inv-count">3 <span>units</span></div>
          <div class="ai-inv-bar-wrap"><div class="ai-inv-bar ai-bar-red" data-width="5%"></div></div>
          <div class="ai-inv-note">Nearly out &middot; urgent reorder needed</div>
        </div>
      </div>
    </section>

    <!-- 04 — SEE IT IN ACTION -->
    <section class="ai-section" id="ai-video">
      <div class="ai-section-label">04 — See It In Action</div>
      <h2 class="ai-section-title">Full system<br><span class="ai-accent">walkthrough.</span></h2>
      <p class="ai-section-sub">See exactly how the daily sync, reporting, and alerts work.</p>

      <div class="ai-video-wrap">
        <iframe
          src="https://www.youtube.com/embed/mV9VePjnCrA"
          title="Automated Inventory System Walkthrough"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
          loading="lazy"
        ></iframe>
      </div>

      <div class="ai-stat-row">
        <div class="ai-stat">
          <div class="ai-stat-num">Daily</div>
          <div class="ai-stat-label">Auto Reports</div>
        </div>
        <div class="ai-stat">
          <div class="ai-stat-num">0</div>
          <div class="ai-stat-label">Manual Updates</div>
        </div>
        <div class="ai-stat">
          <div class="ai-stat-num">100%</div>
          <div class="ai-stat-label">Inventory Accuracy</div>
        </div>
      </div>
    </section>

    <!-- 05 — CTA -->
    <section class="ai-cta-section" id="ai-section-5">
      <div class="ai-section-label" style="justify-content:center;margin-bottom:28px">05 — Get Started</div>
      <h2 class="ai-cta-title">Square connected.<br>Inventory current.<br><span style="color:var(--ai-accent)">Report in your inbox.</span></h2>
      <p class="ai-cta-sub">Stop guessing what's on your shelves. Automated inventory tracking and daily reports.</p>
      <div class="ai-cta-btn-row">
        <a href="#ai-video" class="ai-btn-p">Watch the Demo &rarr;</a>
        <a
          href="#"
          class="ai-btn-s"
          data-cal-link="james-pinder-simpleflo/free-quiz-audit-automation-brothers"
          data-cal-namespace="free-quiz-audit-automation-brothers"
          data-cal-config='{"layout":"month_view","useSlotsViewOnSmallScreen":"true"}'
        >Talk to the Brothers</a>
      </div>
      <p style="font-size:11px;color:var(--ai-muted);margin-top:28px;font-family:var(--ai-mono)">Automated Inventory &middot; Square POS integration &middot; built for operators</p>
    </section>

  </main>
  <Footer />

  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
</Layout>

<style>
  /* ===== HERO (from ProjectPage.astro) ===== */
  .project-hero {
    position: relative;
    padding-top: 160px;
    padding-bottom: var(--space-3xl);
    background: linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-surface-alt) 100%);
    text-align: center;
    overflow: hidden;
  }

  .hero-bg-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(26, 54, 93, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(26, 54, 93, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
  }

  .project-hero-content {
    position: relative;
    max-width: 750px;
    margin: 0 auto;
  }

  .badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: rgba(237, 137, 54, 0.1);
    border: 1px solid rgba(237, 137, 54, 0.3);
    color: var(--orange);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .project-hero h1 {
    margin-bottom: var(--space-md);
    font-size: clamp(2rem, 5vw, 3.25rem);
    line-height: 1.15;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--orange) 0%, var(--blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .project-hero-sub {
    font-size: clamp(1.0625rem, 2vw, 1.25rem);
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto var(--space-lg);
  }

  .hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    padding: var(--space-lg) var(--space-xl);
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow);
  }

  .hero-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .hero-stat-number {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--navy);
    line-height: 1;
  }

  .hero-stat-label {
    font-size: 0.8125rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  .hero-stat-divider {
    width: 1px;
    height: 40px;
    background: var(--border);
  }

  .hero-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    align-items: center;
    margin-bottom: var(--space-xl);
  }

  @media (min-width: 480px) {
    .hero-buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  /* ===== SYNC TERMINAL BOX ===== */
  .ai-scan-box {
    max-width: 520px;
    width: 100%;
    margin: 0 auto;
    background: var(--bg-surface);
    border: 1.5px solid var(--border);
    border-radius: 18px;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(30,53,87,0.09);
  }
  .ai-scan-bar {
    background: var(--bg-surface-alt);
    border-bottom: 1px solid var(--border);
    padding: 10px 16px;
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 10px;
    color: var(--text-muted);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    font-family: 'DM Mono', var(--font-mono);
  }
  .ai-scan-dot { width: 8px; height: 8px; border-radius: 50%; flex-shrink: 0; }
  .ai-scan-input-row {
    display: flex;
    align-items: center;
    gap: 0;
    padding: 12px 12px 12px 18px;
  }
  .ai-scan-input {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    font-family: 'DM Mono', var(--font-mono);
    font-size: 13px;
    color: var(--navy);
  }
  .ai-scan-input::placeholder { color: var(--text-muted); }
  .ai-scan-btn {
    background: var(--orange);
    color: #fff;
    border: none;
    padding: 11px 22px;
    border-radius: 12px;
    font-family: var(--font-sans);
    font-weight: 700;
    font-size: 12px;
    cursor: pointer;
    transition: background 0.15s;
    letter-spacing: 0.01em;
    white-space: nowrap;
  }
  .ai-scan-btn:hover { background: var(--orange-hover); }
  .ai-scan-log {
    padding: 0 18px 18px;
    font-family: 'DM Mono', var(--font-mono);
    font-size: 11px;
    line-height: 2.1;
    display: none;
    border-top: 1px solid var(--border);
    margin-top: 4px;
  }
  .ai-scan-log.visible { display: block; animation: aiFadeUp 0.3s ease; }

  /* ===== AUTOMATED INVENTORY CUSTOM VARIABLES ===== */
  :root {
    --ai-bg: #f2ede4;
    --ai-surface: #faf7f2;
    --ai-surface2: #eee8dc;
    --ai-border: #ddd6c8;
    --ai-accent: #e07b39;
    --ai-accent2: #c4622a;
    --ai-navy: #1e3557;
    --ai-navy2: #2a4a72;
    --ai-blue-gray: #7a95b0;
    --ai-text: #1e3557;
    --ai-muted: #8a9ab0;
    --ai-green: #3a9e6e;
    --ai-green-bg: #e8f5ef;
    --ai-orange: #e07b39;
    --ai-orange-bg: rgba(224,123,57,0.1);
    --ai-red: #c0392b;
    --ai-red-bg: rgba(192,57,43,0.08);
    --ai-mono: 'DM Mono', monospace;
    --ai-sans: 'Plus Jakarta Sans', sans-serif;
  }

  /* ===== TICKER ===== */
  .ai-ticker {
    background: var(--ai-navy);
    color: rgba(255,255,255,0.7);
    padding: 10px 0;
    overflow: hidden;
    white-space: nowrap;
  }
  .ai-ticker-inner {
    display: inline-block;
    animation: aiTicker 30s linear infinite;
    font-family: var(--ai-mono);
    font-size: 11px;
    letter-spacing: 0.1em;
  }
  @keyframes aiTicker {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* ===== SECTIONS ===== */
  .ai-section {
    max-width: 980px;
