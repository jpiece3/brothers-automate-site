<script>
  // Vision engine terminal demo
  const eiScanLines = [
    ['ei-log-working', '\u27F6 Uploading 12 photos...'],
    ['ei-log-ok', '\u2713 Batch created: Yard A - Feb 23'],
    ['ei-log-working', '\u27F6 Identifying: IMG_0847.jpg...'],
    ['ei-log-ok', '\u2713 Komatsu PC290LC-11 \u00B7 Hydraulic Excavator \u00B7 0.94'],
    ['ei-log-working', '\u27F6 Identifying: IMG_0848.jpg...'],
    ['ei-log-ok', '\u2713 2019 CAT D6T LGP \u00B7 Crawler Tractor \u00B7 0.91'],
    ['ei-log-working', '\u27F6 Identifying: IMG_0849.jpg...'],
    ['ei-log-ok', '\u2713 John Deere 333G \u00B7 Compact Track Loader \u00B7 0.88'],
    ['ei-log-working', '\u27F6 Processing remaining 9 photos...'],
    ['ei-log-ok', '\u2713 12/12 complete \u00B7 avg confidence: 0.91'],
    ['ei-log-qual', '\u2192 4 Excavators \u00B7 3 Loaders \u00B7 2 Tractors \u00B7 2 Cranes \u00B7 1 Grader'],
    ['ei-log-ok', '\u26A1 Batch ready \u00B7 export to CSV, Sheets, Notion, or Airtable'],
  ];

  function eiRunIdentify() {
    const log = document.getElementById('eiScanLog');
    if (!log) return;
    log.innerHTML = '';
    log.classList.add('visible');
    let i = 0;
    const iv = setInterval(() => {
      if (i >= eiScanLines.length) { clearInterval(iv); return; }
      const [cls, msg] = eiScanLines[i];
      const div = document.createElement('div');
      div.className = cls;
      div.textContent = msg;
      log.appendChild(div);
      log.scrollTop = log.scrollHeight;
      i++;
    }, 380);
  }

  const eiScanInput = document.getElementById('eiScanInput');
  if (eiScanInput) {
    eiScanInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') eiRunIdentify();
    });
  }

  // Tab switching
  function eiSwitchTab(el) {
    const tabIndex = el.getAttribute('data-tab');
    document.querySelectorAll('.ei-tab-btn').forEach(btn => btn.classList.remove('active'));
    el.classList.add('active');
    document.querySelectorAll('.ei-tab-panel').forEach(panel => panel.classList.remove('active'));
    const target = document.querySelector(`.ei-tab-panel[data-panel="${tabIndex}"]`);
    if (target) target.classList.add('active');
  }

  // Step card toggle
  function eiToggleStep(el) {
    document.querySelectorAll('.ei-loop-card').forEach(c => c.classList.remove('active'));
    el.classList.add('active');
  }

  // Section scroll animations
  const eiObs = new IntersectionObserver(entries => {
    entries.forEach(e => {
      if (e.isIntersecting) {
        e.target.classList.add('visible');
      }
    });
  }, { threshold: 0.2 });
  document.querySelectorAll('.ei-section, .ei-cta-section').forEach(el => eiObs.observe(el));

  // Make functions available globally for inline onclick handlers
  window.eiRunIdentify = eiRunIdentify;
  window.eiSwitchTab = eiSwitchTab;
  window.eiToggleStep = eiToggleStep;
</script>

