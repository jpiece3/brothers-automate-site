---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import IndustriesGrid from '../../components/IndustriesGrid.astro';
---

<Layout
  title="Quiz Funnels by Industry | Brothers Automate"
  description="Industry-specific quiz funnels that capture, score, and nurture leads automatically. Built for coaches, financial advisors, real estate, contractors, and e-commerce brands."
>
  <Header />
  <main>
    <section class="hub-hero">
      <div class="container">
        <div class="hub-hero-content" data-animate="fade-up">
          <span class="badge">Industries We Serve</span>
          <h1>Quiz Funnels Built for <span class="text-gradient">Your Industry</span></h1>
          <p class="hub-subheadline">
            Same system. Different language. We customize every quiz funnel to speak directly to your audience's pain points, terminology, and buying signals.
          </p>
        </div>
      </div>
    </section>

    <section class="hub-grid bg-surface">
      <div class="container">
        <IndustriesGrid />
      </div>
    </section>

    <section class="hub-cta bg-navy">
      <div class="container">
        <div class="cta-content" data-animate="fade-up">
          <h2>Don't See Your Industry?</h2>
          <p class="cta-subhead">We build quiz funnels for any business that needs to qualify and nurture leads. Talk to us about your specific market.</p>
          <div class="cta-buttons" data-animate="scale-up">
            <a
              href="#"
              class="btn btn-primary btn-lg"
              data-cal-link="james-pinder-simpleflo/free-quiz-audit-automation-brothers"
              data-cal-namespace="free-quiz-audit-automation-brothers"
              data-cal-config='{"layout":"month_view","useSlotsViewOnSmallScreen":"true"}'
            >Talk to the Brothers</a>
          </div>
          <p class="cta-note">Free consultation &bull; No obligation</p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .hub-hero {
    padding-top: 140px;
    padding-bottom: var(--space-2xl);
    background: var(--bg-primary);
    text-align: center;
  }

  .hub-hero-content {
    max-width: 750px;
    margin: 0 auto;
  }

  .badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: rgba(237, 137, 54, 0.1);
    border: 1px solid rgba(237, 137, 54, 0.3);
    color: var(--orange);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-lg);
  }

  .text-gradient {
    display: inline-block;
    background: linear-gradient(135deg, var(--orange) 0%, var(--blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }

  .hub-subheadline {
    font-size: clamp(1.125rem, 2.5vw, 1.375rem);
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 650px;
    margin: 0 auto;
  }

  .hub-grid {
    padding: var(--space-2xl) 0 var(--space-4xl);
  }

  .hub-cta {
    padding: var(--space-4xl) 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hub-cta::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(237, 137, 54, 0.15) 0%, transparent 60%);
    pointer-events: none;
  }

  .cta-content {
    position: relative;
    max-width: 700px;
    margin: 0 auto;
    z-index: 1;
  }

  .hub-cta h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--space-md);
  }

  .cta-subhead {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-xl);
  }

  .cta-buttons { margin-bottom: var(--space-lg); }

  .cta-buttons .btn-primary {
    box-shadow: 0 0 30px rgba(237, 137, 54, 0.3);
  }

  .cta-buttons .btn-primary:hover {
    box-shadow: 0 0 50px rgba(237, 137, 54, 0.5);
  }

  .cta-note {
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  @media (max-width: 767px) {
    .hub-hero {
      padding-top: 90px;
      padding-bottom: var(--space-xl);
    }
  }
</style>
