---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getAllLocations } from '../../data/locations';

const allLocations = getAllLocations();
const SITE_URL = 'https://brothersautomate.com';

// Breadcrumb Schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": SITE_URL },
    { "@type": "ListItem", "position": 2, "name": "Locations", "item": `${SITE_URL}/in/` }
  ]
};
---

<Layout
  title="AI Automation for Philadelphia Area Businesses | Brothers Automate"
  description="AI automation systems for service businesses in Philadelphia, Montgomery County, Delaware County, Chester County, Bucks County, and Burlington County."
  canonicalUrl={`${SITE_URL}/in/`}
>
  <Header />
  <main>
    <section class="hub-hero">
      <div class="container">
        <div class="hub-hero-content" data-animate="fade-up">
          <span class="badge">Philadelphia Metro</span>
          <h1>AI Automation for <span class="text-gradient">Philadelphia Area Businesses</span></h1>
          <p class="hub-subheadline">
            We build AI systems for service businesses across the greater Philadelphia area. Automated lead follow-up, review management, route optimization, and more â€” custom-built in 1-3 weeks.
          </p>
        </div>
      </div>
    </section>

    <section class="hub-grid bg-surface">
      <div class="container">
        <div class="locations-grid">
          {allLocations.map((loc) => (
            <a href={`/in/${loc.slug}`} class="location-card" data-animate="fade-up">
              <div class="location-icon">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={loc.icon} />
                </svg>
              </div>
              <h3>{loc.name}, {loc.region}</h3>
              <p>{loc.tagline}</p>
              <span class="card-link">See details &rarr;</span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <section class="hub-cta bg-navy">
      <div class="container">
        <div class="cta-content" data-animate="fade-up">
          <h2>Not in the Philly Area?</h2>
          <p class="cta-subhead">We work with service businesses everywhere. Our systems are built remotely and run 24/7 regardless of where you are located. Talk to us about your business.</p>
          <div class="cta-buttons" data-animate="scale-up">
            <a
              href="#"
              class="btn btn-primary btn-lg"
              data-cal-link="james-pinder-simpleflo/free-quiz-audit-automation-brothers"
              data-cal-namespace="free-quiz-audit-automation-brothers"
              data-cal-config='{"layout":"month_view","useSlotsViewOnSmallScreen":"true"}'
            >Talk to the Brothers</a>
          </div>
          <p class="cta-note">Free consultation &bull; We work with businesses everywhere</p>
        </div>
      </div>
    </section>
  </main>
  <Footer />

  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
</Layout>

<style>
  .hub-hero {
    padding-top: 140px;
    padding-bottom: var(--space-2xl);
    background: var(--bg-primary);
    text-align: center;
  }

  .hub-hero-content {
    max-width: 750px;
    margin: 0 auto;
  }

  .badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: rgba(237, 137, 54, 0.1);
    border: 1px solid rgba(237, 137, 54, 0.3);
    color: var(--orange);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-lg);
  }

  .text-gradient {
    display: inline-block;
    background: linear-gradient(135deg, var(--orange) 0%, var(--blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }

  .hub-subheadline {
    font-size: clamp(1.125rem, 2.5vw, 1.375rem);
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 650px;
    margin: 0 auto;
  }

  .hub-grid {
    padding: var(--space-2xl) 0 var(--space-4xl);
  }

  .locations-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
  }

  .location-card {
    display: block;
    padding: var(--space-xl);
    background: var(--bg-primary);
    border: 1px solid var(--border-light);
    border-radius: 16px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .location-card:hover {
    border-color: var(--orange);
    box-shadow: 0 8px 30px rgba(237, 137, 54, 0.1);
    transform: translateY(-2px);
  }

  .location-icon {
    width: 48px;
    height: 48px;
    background: rgba(237, 137, 54, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-md);
  }

  .location-icon svg {
    width: 24px;
    height: 24px;
    color: var(--orange);
  }

  .location-card h3 {
    font-size: 1.25rem;
    color: var(--navy);
    margin-bottom: var(--space-sm);
  }

  .location-card p {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-md);
  }

  .card-link {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--orange);
    transition: color 0.2s ease;
  }

  .location-card:hover .card-link {
    color: var(--blue);
  }

  .hub-cta {
    padding: var(--space-4xl) 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hub-cta::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(237, 137, 54, 0.15) 0%, transparent 60%);
    pointer-events: none;
  }

  .cta-content {
    position: relative;
    max-width: 700px;
    margin: 0 auto;
    z-index: 1;
  }

  .hub-cta h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--space-md);
  }

  .cta-subhead {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: var(--space-xl);
  }

  .cta-buttons { margin-bottom: var(--space-lg); }

  .cta-buttons .btn-primary {
    box-shadow: 0 0 30px rgba(237, 137, 54, 0.3);
  }

  .cta-buttons .btn-primary:hover {
    box-shadow: 0 0 50px rgba(237, 137, 54, 0.5);
  }

  .cta-note {
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  @media (max-width: 767px) {
    .hub-hero {
      padding-top: 90px;
      padding-bottom: var(--space-xl);
    }

    .locations-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
