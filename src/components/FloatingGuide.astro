<script is:inline>
  (function() {
    var fab = document.getElementById('guideFab');
    var overlay = document.getElementById('guideOverlay');
    var closeBtn = document.getElementById('guideClose');
    var gate = document.getElementById('guideGate');
    var body = document.getElementById('guideBody');
    var form = document.getElementById('guideForm');
    var nav = document.getElementById('gbNav');

    var hasEmail = localStorage.getItem('ba_guide_email');

    function openModal() {
      if (hasEmail) {
        gate.classList.add('hidden');
        body.classList.add('visible');
      } else {
        gate.classList.remove('hidden');
        body.classList.remove('visible');
      }
      overlay.classList.add('open');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      overlay.classList.remove('open');
      document.body.style.overflow = '';
    }

    fab.addEventListener('click', openModal);
    closeBtn.addEventListener('click', closeModal);

    overlay.addEventListener('click', function(e) {
      if (e.target === overlay) closeModal();
    });

    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && overlay.classList.contains('open')) closeModal();
    });

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      var email = document.getElementById('guideEmail').value;
      if (email) {
        localStorage.setItem('ba_guide_email', email);
        hasEmail = email;
        gate.classList.add('hidden');
        body.classList.add('visible');
      }
    });

    // Tab navigation
    nav.addEventListener('click', function(e) {
      var tab = e.target.closest('.gb-tab');
      if (!tab) return;
      var tabName = tab.getAttribute('data-tab');

      nav.querySelectorAll('.gb-tab').forEach(function(t) { t.classList.remove('active'); });
      tab.classList.add('active');

      body.querySelectorAll('.gb-section').forEach(function(s) { s.classList.remove('active'); });
      var target = body.querySelector('[data-section="' + tabName + '"]');
      if (target) target.classList.add('active');
    });

    // Accordions (insights)
    document.querySelectorAll('.gb-acc-header').forEach(function(btn) {
      btn.addEventListener('click', function() {
        this.closest('.gb-acc-item').classList.toggle('open');
      });
    });

    // Funnel rows
    document.querySelectorAll('.gb-funnel-header').forEach(function(btn) {
      btn.addEventListener('click', function() {
        this.closest('.gb-funnel-row').classList.toggle('open');
      });
    });
  })();
</script>
