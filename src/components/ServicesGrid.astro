---

<section class="services-grid-section" id="services">
  <div class="container">
    <div class="section-header" data-animate="fade-up">
      <h2>What We Build</h2>
      <p>Four areas where we build AI systems that handle the work for you.</p>
    </div>

    <div class="services-grid" data-animate-stagger>
      {services.map((service) => (
        <a href="/projects" class="service-card card">
          <div class="service-icon-area">
            <span class="service-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d={service.icon}></path>
              </svg>
            </span>
          </div>
          <h3>{service.name}</h3>
          <p>{service.description}</p>
          <span class="service-cta">{service.ctaLabel} &rarr;</span>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .services-grid-section {
    padding: var(--space-4xl) 0;
  }

  .services-grid {
    display: grid;
    gap: var(--space-lg);
  }

  @media (min-width: 640px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .service-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    padding: var(--space-xl);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition);
  }

  .service-card:hover {
    color: inherit;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .service-card:hover .service-cta {
    color: var(--orange);
  }

  .service-icon-area {
    width: 72px;
    height: 72px;
    border-radius: var(--radius-md);
    background: linear-gradient(135deg, var(--navy) 0%, var(--blue) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .service-icon {
    color: white;
    display: flex;
  }

  .service-card h3 {
    font-size: 1.25rem;
    margin: 0;
    color: var(--navy);
  }

  .service-card p {
    margin: 0;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    flex: 1;
  }

  .service-cta {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--blue);
    transition: color var(--transition);
  }
</style>
