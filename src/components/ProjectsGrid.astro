---
import { getAllProjects } from '../data/projects';

interface Props {
  compact?: boolean;
}

const { compact = false } = Astro.props;
const projects = getAllProjects();
---

<section class:list={['projects-grid-section', { compact }]} id="projects">
  <div class="container">
    {!compact && (
      <div class="section-header" data-animate="fade-up">
        <h2>What We Build</h2>
        <p>AI systems that save you time and money. Each one built custom for your business.</p>
      </div>
    )}

    <div class="projects-grid" data-animate-stagger>
      {projects.map((project) => (
        <a href={`/projects/${project.slug}`} class="project-card card">
          <div class="project-icon-area">
            <span class="project-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <path d={project.icon}></path>
              </svg>
            </span>
          </div>
          <h3>{project.name}</h3>
          <p>{project.description}</p>
          <span class="project-cta">{project.ctaLabel} &rarr;</span>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .projects-grid-section {
    padding: var(--space-4xl) 0;
  }

  .projects-grid-section.compact {
    padding: var(--space-3xl) 0;
  }

  .projects-grid {
    display: grid;
    gap: var(--space-lg);
  }

  @media (min-width: 640px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .project-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    padding: var(--space-xl);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition);
  }

  .project-card:hover {
    color: inherit;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .project-card:hover .project-cta {
    color: var(--orange);
  }

  .project-icon-area {
    width: 72px;
    height: 72px;
    border-radius: var(--radius-md);
    background: linear-gradient(135deg, var(--navy) 0%, var(--blue) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-icon {
    color: white;
    display: flex;
  }

  .project-card h3 {
    font-size: 1.25rem;
    margin: 0;
    color: var(--navy);
  }

  .project-card p {
    margin: 0;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
    flex: 1;
  }

  .project-cta {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--blue);
    transition: color var(--transition);
  }
</style>
