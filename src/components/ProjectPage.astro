---
import type { Project } from '../data/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<!-- Project Hero -->
<section class="project-hero">
  <div class="hero-bg-grid"></div>
  <div class="container">
    <div class="project-hero-content" data-animate="fade-up">
      <span class="badge">{project.tagline}</span>
      <h1>{project.name}.<br /><span class="gradient-text">{project.results.stats[0].number} {project.results.stats[0].label}.</span></h1>
      <p class="project-hero-sub">{project.meta.description}</p>

      <div class="hero-stats">
        {project.results.stats.map((stat, i) => (
          <>
            {i > 0 && <div class="hero-stat-divider"></div>}
            <div class="hero-stat">
              <span class="hero-stat-number">{stat.number}</span>
              <span class="hero-stat-label">{stat.label}</span>
            </div>
          </>
        ))}
      </div>

      <div class="hero-buttons">
        {project.productUrl && (
          <a href={project.productUrl} class="btn btn-primary btn-lg" target="_blank" rel="noopener">Try It Live</a>
        )}
        <a
          href="#"
          class="btn btn-secondary btn-lg"
          data-cal-link="james-pinder-simpleflo/free-quiz-audit-automation-brothers"
          data-cal-namespace="free-quiz-audit-automation-brothers"
          data-cal-config='{"layout":"month_view","useSlotsViewOnSmallScreen":"true"}'
        >Talk to the Brothers</a>
      </div>
    </div>
  </div>
</section>

<!-- Problem -->
<section class="project-problem bg-surface-alt">
  <div class="container">
    <div class="problem-content">
      <div class="problem-text" data-animate="fade-up">
        <span class="section-label">The Problem</span>
        <h2>{project.problem.headline}</h2>
        <p>{project.problem.description}</p>
      </div>
      <div class="pain-points" data-animate-stagger>
        {project.problem.painPoints.map((point) => (
          <div class="pain-point">
            <span class="pain-marker">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </span>
            <span>{point}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<!-- Solution -->
<section class="project-solution bg-surface">
  <div class="container">
    <div data-animate="fade-up">
      <span class="section-label">The AI Solution</span>
      <h2>{project.solution.headline}</h2>
      <p class="solution-desc">{project.solution.description}</p>
    </div>
    <div class="features-grid" data-animate-stagger>
      {project.solution.features.map((feature) => (
        <div class="feature-card card">
          <h3>{feature.title}</h3>
          <p>{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Results -->
<section class="project-results bg-navy">
  <div class="container">
    <div data-animate="fade-up">
      <span class="section-label section-label-light">Time & Money Saved</span>
      <h2>{project.results.headline}</h2>
    </div>
    <div class="results-stats" data-animate-stagger>
      {project.results.stats.map((stat) => (
        <div class="result-stat">
          <span class="result-number">{stat.number}</span>
          <span class="result-label">{stat.label}</span>
          {stat.context && <span class="result-context">{stat.context}</span>}
        </div>
      ))}
    </div>

    {project.results.testimonial && (
      <blockquote class="testimonial" data-animate="fade-up">
        <p>"{project.results.testimonial.quote}"</p>
        <cite>
          <strong>{project.results.testimonial.author}</strong>
          <span>{project.results.testimonial.role}</span>
        </cite>
      </blockquote>
    )}

    {project.videoUrl && (
      <div class="video-embed" data-animate="scale-up">
        <iframe
          src={project.videoUrl}
          title={`${project.name} Demo`}
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    )}
  </div>
</section>

<!-- CTA -->
<section class="project-cta-section bg-surface-alt">
  <div class="container">
    <div class="project-cta-content" data-animate="fade-up">
      <h2>{project.cta.headline}</h2>
      <p>{project.cta.description}</p>
      <div class="project-cta-buttons">
        <a
          href="#"
          class="btn btn-primary btn-lg"
          data-cal-link="james-pinder-simpleflo/free-quiz-audit-automation-brothers"
          data-cal-namespace="free-quiz-audit-automation-brothers"
          data-cal-config='{"layout":"month_view","useSlotsViewOnSmallScreen":"true"}'
        >Talk to the Brothers</a>
        {project.productUrl && (
          <a href={project.productUrl} class="btn btn-secondary btn-lg" target="_blank" rel="noopener">Try It Live</a>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  /* Project Hero */
  .project-hero {
    position: relative;
    padding-top: 160px;
    padding-bottom: var(--space-3xl);
    background: linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-surface-alt) 100%);
    text-align: center;
    overflow: hidden;
  }

  .hero-bg-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(26, 54, 93, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(26, 54, 93, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
  }

  .project-hero-content {
    position: relative;
    max-width: 750px;
    margin: 0 auto;
  }

  .badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background: rgba(237, 137, 54, 0.1);
    border: 1px solid rgba(237, 137, 54, 0.3);
    color: var(--orange);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
  }

  .project-hero h1 {
    margin-bottom: var(--space-md);
    font-size: clamp(2rem, 5vw, 3.25rem);
    line-height: 1.15;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--orange) 0%, var(--blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .project-hero-sub {
    font-size: clamp(1.0625rem, 2vw, 1.25rem);
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto var(--space-lg);
  }

  .hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
    padding: var(--space-lg) var(--space-xl);
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow);
  }

  .hero-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .hero-stat-number {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--navy);
    line-height: 1;
  }

  .hero-stat-label {
    font-size: 0.8125rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  .hero-stat-divider {
    width: 1px;
    height: 40px;
    background: var(--border);
  }

  .hero-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    align-items: center;
  }

  @media (min-width: 480px) {
    .hero-buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  /* Section Labels */
  .section-label {
    display: inline-block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--orange);
    margin-bottom: var(--space-sm);
  }

  .section-label-light {
    color: rgba(237, 137, 54, 0.8);
  }

  /* Problem */
  .project-problem {
    padding: var(--space-4xl) 0;
  }

  .problem-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .problem-text {
    margin-bottom: var(--space-xl);
  }

  .problem-text h2 {
    margin-bottom: var(--space-md);
  }

  .problem-text p {
    color: var(--text-secondary);
    font-size: 1.0625rem;
    line-height: 1.7;
  }

  .pain-points {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .pain-point {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
    padding: var(--space-md);
    background: var(--bg-surface);
    border-radius: var(--radius-md);
    border: 1px solid var(--border);
  }

  .pain-marker {
    flex-shrink: 0;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .pain-point span:last-child {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  /* Solution */
  .project-solution {
    padding: var(--space-4xl) 0;
  }

  .project-solution h2 {
    margin-bottom: var(--space-md);
  }

  .solution-desc {
    color: var(--text-secondary);
    font-size: 1.0625rem;
    line-height: 1.7;
    max-width: 700px;
    margin-bottom: var(--space-xl);
  }

  .features-grid {
    display: grid;
    gap: var(--space-md);
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .feature-card {
    padding: var(--space-lg);
  }

  .feature-card h3 {
    font-size: 1.0625rem;
    color: var(--navy);
    margin: 0 0 var(--space-xs);
  }

  .feature-card p {
    margin: 0;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* Results */
  .project-results {
    padding: var(--space-4xl) 0;
    text-align: center;
  }

  .project-results h2 {
    margin-bottom: var(--space-xl);
  }

  .results-stats {
    display: flex;
    justify-content: center;
    gap: var(--space-2xl);
    flex-wrap: wrap;
    margin-bottom: var(--space-xl);
  }

  .result-stat {
    text-align: center;
  }

  .result-number {
    display: block;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    color: var(--orange);
    line-height: 1;
    margin-bottom: var(--space-xs);
  }

  .result-label {
    display: block;
    font-size: 0.9375rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2px;
  }

  .result-context {
    display: block;
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .testimonial {
    max-width: 600px;
    margin: var(--space-xl) auto 0;
    padding: var(--space-lg);
    border-left: 3px solid var(--orange);
    text-align: left;
  }

  .testimonial p {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    font-style: italic;
    line-height: 1.7;
    margin: 0 0 var(--space-md);
  }

  .testimonial cite {
    font-style: normal;
  }

  .testimonial strong {
    display: block;
    color: white;
    font-size: 0.9375rem;
  }

  .testimonial cite span {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.8125rem;
  }

  .video-embed {
    max-width: 700px;
    margin: var(--space-xl) auto 0;
    border-radius: var(--radius-lg);
    overflow: hidden;
    aspect-ratio: 16/9;
  }

  .video-embed iframe {
    width: 100%;
    height: 100%;
  }

  /* Project CTA */
  .project-cta-section {
    padding: var(--space-3xl) 0;
    text-align: center;
  }

  .project-cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .project-cta-content h2 {
    margin-bottom: var(--space-sm);
  }

  .project-cta-content p {
    color: var(--text-secondary);
    margin-bottom: var(--space-lg);
    font-size: 1.0625rem;
  }

  .project-cta-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    align-items: center;
  }

  @media (min-width: 480px) {
    .project-cta-buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  @media (max-width: 767px) {
    .project-hero {
      padding-top: 120px;
      padding-bottom: var(--space-2xl);
    }

    .hero-stats {
      flex-direction: column;
      gap: var(--space-md);
      padding: var(--space-md);
    }

    .hero-stat-divider {
      width: 60px;
      height: 1px;
    }

    .results-stats {
      gap: var(--space-lg);
    }

    .project-cta-buttons .btn,
    .hero-buttons .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
