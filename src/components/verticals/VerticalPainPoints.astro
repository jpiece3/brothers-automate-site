---
interface Props {
  headline: string;
  stats: { number: string; unit: string; text: string }[];
  bottomStat: string;
  conclusion: string;
}

const { headline, stats, bottomStat, conclusion } = Astro.props;
---

<section class="v-pain bg-surface" id="problem">
  <div class="container">
    <div class="section-header" data-animate="fade-up">
      <h2>{headline}</h2>
    </div>

    <div class="stats-grid" data-animate-stagger>
      {stats.map((stat) => (
        <div class="stat-card">
          <span class="stat-number">{stat.number}</span>
          <span class="stat-unit">{stat.unit}</span>
          <p class="stat-text">{stat.text}</p>
        </div>
      ))}
    </div>

    <div class="bottom-stat" data-animate="fade-up">
      <p>{bottomStat}</p>
    </div>

    <p class="pain-conclusion" data-animate="fade-up">{conclusion}</p>
  </div>
</section>

<style>
  .v-pain { padding: var(--space-4xl) 0; }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }

  .stat-card {
    background: var(--bg-surface-alt);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: clamp(3rem, 6vw, 4.5rem);
    font-weight: 800;
    color: var(--navy);
    line-height: 1;
  }

  .stat-unit {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--orange);
    margin-top: var(--space-xs);
    margin-bottom: var(--space-md);
  }

  .stat-text {
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.6;
  }

  .bottom-stat {
    background: var(--navy);
    border-radius: var(--radius-lg);
    padding: var(--space-xl) var(--space-2xl);
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .bottom-stat p {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    line-height: 1.7;
  }

  .pain-conclusion {
    text-align: center;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--navy);
    max-width: 700px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .stats-grid { grid-template-columns: 1fr; }
    .stat-card {
      display: grid;
      grid-template-columns: auto 1fr;
      grid-template-rows: auto auto;
      gap: 0 var(--space-md);
      text-align: left;
      padding: var(--space-lg);
    }
    .stat-number { grid-row: 1 / 3; align-self: center; font-size: 3rem; }
    .stat-unit { align-self: end; margin: 0; }
    .stat-text { grid-column: 2; }
    .bottom-stat { padding: var(--space-lg); }
  }
</style>
